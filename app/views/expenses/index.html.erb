<p id="notice"><%= notice %></p>

<div class="main_block">
  <h1>Expenses</h1>

  <table class="main_table">
    <thead>
      <tr class="table_items">
        <th>Title</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.title %></td>
          <td><%= expense.description[0, 10] %></td>
          <td><%= expense.amount %> $</td>
          <td><%= expense.category %></td>
          <td><%= link_to 'Show', expense %></td>
          <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
          <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, style: "color: red" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="new_expenses_btn">
  <%= link_to 'New Expense', new_expense_path %>
</div>
