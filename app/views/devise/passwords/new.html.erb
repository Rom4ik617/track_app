<body class="body_bg">  
  <main class="main_reg">
    <h2 class="h_reg">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field email_margin_top">
        <%= f.label :email, class: "h_email_log" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class:"btn_forgot_pass" %>
      </div>
    <% end %>

    <div class="devise_links">
      <%= render "devise/shared/links" %>
    </div>
  </main>
</body>